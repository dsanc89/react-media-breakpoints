{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "lint",
      "label": "Run ESlint fix",
      "group": "build",
      "problemMatcher": [
        "$eslint-stylish"
      ]
    },
    {
      "type": "npm",
      "script": "test",
      "label": "Run Jasmine tests",
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "type": "npm",
      "script": "cover",
      "label": "Run Jasmine tests w/ Istanbul code coverage",
      "group": {
        "kind": "test",
        "isDefault": true
      }
    }
  ]
}